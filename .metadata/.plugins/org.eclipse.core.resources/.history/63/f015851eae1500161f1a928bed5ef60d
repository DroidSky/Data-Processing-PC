	private static final Pattern SPACE = Pattern.compile(" ");

	private JavaKafkaWordCount() {
	}
	
	  public static void main(String[] args) {
		    if (args.length < 4) {
		      System.err.println("Usage: JavaKafkaWordCount <zkQuorum> <group> <topics> <numThreads>");
